@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/slide-1.jpg" alt="We Learn">
            <div class="carousel-caption">
                <span>We Learn!</span>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/slide-3.jpg" alt="Never Stop">
            <div class="carousel-caption">
                <span>Never Stop!</span>
            </div>
        </div>

        <div class="item" >
            <img src="~/Content/Images/slide-2.jpg" alt="We Win">
            <div class="carousel-caption">
                <span>Use of Any Device!</span>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Courses</h2>
        <p>Use this option to view all course and offerings at this institution.</p>
        <p>@Html.ActionLink("Learn More","Index","Courses",null, new { @class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>View all students at this institution.</p>
        <p>@Html.ActionLink("All Students", "Index", "Students", null, new { @class = "btn btn-primary" })</p>
    </div>
</div>